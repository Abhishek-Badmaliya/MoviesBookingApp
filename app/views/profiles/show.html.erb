<section class="h-100 gradient-custom-2">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-7">
        <div class="card">
          <div class="rounded-top text-white d-flex flex-row" style="background-color: #000; height:200px;">
            <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
              <img src="https://cdn-icons.flaticon.com/png/128/4520/premium/4520809.png?token=exp=1659103404~hmac=63d9adc057e217bc53297331503ae15d" alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2 bg-secondary" style="width: 150px; z-index: 1">
              <%= link_to 'Edit Profile', edit_user_registration_path, class: "btn btn-outline-dark mt-2", style: "z-index: 1;" %>
            </div>
            <div class="ms-3" style="margin-top: 130px;">
              <h5><%= current_user.first_name %>&nbsp<%= current_user.last_name %></h5>
              <%= current_user.email %></p>
            </div>
          </div>
          <div class="p-4 text-black" style="background-color: #f8f9fa;">
            <div class="d-flex justify-content-end text-center py-1">
              <div>
                <p class="mb-1 mt-2 h6">Contact</p>
                <p class="small text-muted mb-0"><%= current_user.contact_number %></p></p>
              </div>
            </div>
          </div>
          <div class="card-body p-4 text-black">
            <div class="mb-4">
              <p class="lead fw-normal mb-1">About</p>
              <div class="p-4" style="background-color: #f8f9fa;">
                <p class="font-italic mb-1"><strong>Birth Date : </strong><%= current_user.birth_date %></p>
                <p class="font-italic mb-1"><strong>Gender : </strong><%= current_user.gender %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
